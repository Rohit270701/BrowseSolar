<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:id="@+id/drawer"
tools:openDrawer="right"
tools:ignore="HardcodedText">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:fitsSystemWindows="true"
        android:background="@drawable/lighttheme"
        tools:context=".MainActivity">


        <ImageButton
            android:id="@+id/btn_weather"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-13dp"
            android:layout_marginLeft="-13dp"
            android:layout_marginTop="-34dp"
            android:layout_marginEnd="251dp"
            android:layout_marginRight="251dp"
            android:layout_marginBottom="613dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_weather"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/celsiustv"
            android:layout_width="117dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="201dp"
            android:layout_marginRight="201dp"
            android:layout_marginBottom="644dp"
            android:gravity="center"
            android:text="- Â°C"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />
        <TextView
            android:id="@+id/humiditytv"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="239dp"
            android:layout_marginRight="239dp"
            android:layout_marginBottom="622dp"
            android:gravity="center"
            android:text="Humidity"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </TextView>

        <TextView
            android:id="@+id/cityname"
            android:layout_width="191dp"
            android:layout_height="72dp"
            android:layout_below="@+id/day_night_switch"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-18dp"
            android:layout_marginLeft="-18dp"
            android:layout_marginTop="67dp"
            android:layout_marginEnd="234dp"
            android:layout_marginRight="234dp"
            android:layout_marginBottom="596dp"
            android:gravity="center"
            android:hint="City Name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </TextView>

        <AutoCompleteTextView
            android:id="@+id/googlesearch"
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="560dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/sunmoon"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="City Search"
            android:inputType="text"
            android:padding="5dip"
            android:textColor="@color/black"
            android:textColorHint="#808080" />
        <Button
            android:id="@+id/search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="570dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:drawableBottom="@drawable/ic_iconfinder_1564527_find_magnifier_search_icon"
            />
        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="153dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="397dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Instagram"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:shadowColor="@color/black"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_light_instagram"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Facebook"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_light_facebook"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/amazon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Amazon"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_light_amazon"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/flipkart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Flipkart"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:textStyle="bold"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_light_flipkart"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Google"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_google"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:text="Gmail"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_gmail"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:text="Youtube"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_youtube"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/meet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:text="Meet"
                    android:textColor="#1F51FF"
                    android:textSize="7dp"
                    android:background="@drawable/mtbutton"
                    android:drawableTop="@drawable/ic_meet"
                    android:foregroundGravity="center_vertical"
                    app:backgroundTint="#E2E5DE" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/covidweb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_iconfinder_6000477_cell_corona_coronavirus_covid19_virus_icon"
                android:drawableRight="@drawable/ic_iconfinder_6000477_cell_corona_coronavirus_covid19_virus_icon"
                android:text="Covid-19 Report"

                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:tabIndicatorColor="@color/purple_500"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/white">


                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEWS" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPORTS" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HEALTH" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCIENCE" />


                </com.google.android.material.tabs.TabLayout>


            </LinearLayout>


        </LinearLayout>

        <com.mahfa.dnswitch.DayNightSwitch
            android:id="@+id/day_night_switch"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="658dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042" />


        <!--SUN IMAGE-->
        <ImageView
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="278dp"
            android:layout_marginLeft="278dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/sun" />
        <!--NIGHT IMAGE-->
        <ImageView
            android:id="@+id/night_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-99dp"
            android:src="@drawable/night_review" />

        <!--DAY IMAGE-->
        <ImageView
            android:id="@+id/day_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-99dp"
            android:src="@drawable/day_review" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragmentcontainer"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_above="@+id/bottom_navigation"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:isScrollContainer="false">

        </androidx.viewpager.widget.ViewPager>

        <com.etebarian.meowbottomnavigation.MeowBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"

            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            app:mbn_circleColor="@color/white"
            app:mbn_countBackgroundColor="#000000"
            app:mbn_countTextColor="@color/white"
            app:mbn_defaultIconColor="@color/white"

            app:mbn_selectedIconColor="#13274F"
            app:mbn_shadowColor="@android:color/transparent" />

    </RelativeLayout>

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/nav_view"
    android:background="@drawable/buttongradient"
    android:fitsSystemWindows="true"
    android:layout_gravity="end"
    android:textStyle="bold"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/menu"
    app:itemIconTint="@color/white"
    app:itemHorizontalPadding="30dp"
    app:itemTextColor="@color/white"
    />

</androidx.drawerlayout.widget.DrawerLayout>